<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.yiqixue.user.UserFragment"
    android:orientation="vertical"
    android:background="@color/activity_background_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/img_user_logo"
            android:src="@mipmap/head2"
            android:scaleType="fitXY"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="王珂"
            android:id="@+id/tv_user_name"
            android:textSize="@dimen/dimen_text_title"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_user_logo"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:background="@drawable/selector_item_bg"
            android:id="@+id/layout_my_message"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="我的消息"
                android:id="@+id/tv_my_message"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="24dp"
                android:textSize="@dimen/dimen_text_subhead" />

        </RelativeLayout>


        <View android:layout_height="1px"
            android:background="@color/divider_line_color"
            android:layout_width="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:background="@drawable/selector_item_bg"
            android:id="@+id/layout_my_credit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="我的学分"
                android:id="@+id/tv_my_credit"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="24dp"
                android:textSize="@dimen/dimen_text_subhead" />

        </RelativeLayout>

        <View android:layout_height="1px"
            android:background="@color/divider_line_color"
            android:layout_width="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:background="@drawable/selector_item_bg"
            android:id="@+id/layout_my_wallet"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="我的钱包"
                android:id="@+id/tv_my_wallet"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_text_subhead" />

        </RelativeLayout>

        <View android:layout_height="1px"
            android:background="@color/divider_line_color"
            android:layout_width="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:background="@drawable/selector_item_bg"
            android:id="@+id/layout_my_order">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="我的订单"
                android:id="@+id/tv_my_order"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_text_subhead" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
