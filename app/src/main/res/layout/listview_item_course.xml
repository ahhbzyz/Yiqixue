<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/img_course_logo"
            android:src="@mipmap/head1"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_course_logo"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="中考语文阅读理解"
                android:id="@+id/tv_course_name"

                android:textSize="@dimen/dimen_text_subhead"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="￥12"
                android:textSize="@dimen/dimen_text_body"
                android:id="@+id/tv_course_price"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="线下授课"
                android:id="@+id/tv_course_tag_offline"

                android:layout_below="@+id/tv_course_name"
                android:textSize="@dimen/dimen_text_caption"
                android:background="@color/theme"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="支持随退"
                android:id="@+id/tv_course_tag_refund"
                android:textSize="@dimen/dimen_text_caption"
                android:textColor="@color/white"
                android:background="@color/theme"
                android:layout_toRightOf="@+id/tv_course_tag_offline"
                android:layout_below="@+id/tv_course_name"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="适合人群："
                android:id="@+id/tv_target_customer_title"

                android:textSize="@dimen/dimen_text_body"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_course_tag_offline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="初一学生"
                android:id="@+id/tv_target_customer"
                android:layout_below="@+id/tv_course_tag_offline"
                android:layout_toRightOf="@+id/tv_target_customer_title"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/dimen_text_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="班级人数："
                android:id="@+id/tv_course_member_title"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_target_customer_title"
                android:textSize="@dimen/dimen_text_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4/50"
                android:id="@+id/tv_course_member"
                android:layout_below="@+id/tv_target_customer_title"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/tv_course_member_title"
                android:textColor="@color/theme"
                android:textSize="@dimen/dimen_text_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="每周一到周五下午2点"
                android:id="@+id/tv_course_time"

                android:layout_below="@+id/tv_course_member_title"
                android:textSize="@dimen/dimen_text_body"
                android:layout_marginTop="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="距离"
                android:id="@+id/tv_course_distance_title"
                android:layout_alignParentRight="false"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_course_member_title"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/dimen_text_body"
                android:layout_toLeftOf="@+id/tv_course_distance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="8km"
                android:id="@+id/tv_course_distance"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_course_member"
                android:layout_marginTop="4dp"
                android:textColor="@color/theme"
                android:textSize="@dimen/dimen_text_body" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>